(jbuild_version 1)

(library
 ((name subsocia_sync_ldap)
  (modules (Config Netldapx Sync Template Variable))
  (flags (-thread -ppx ppx_lwt))
  (preprocess (pps (ppx_compose ppx_regexp)))
  (libraries
   (angstrom
    ppx_compose.runtime
    inifiles
    ldap
    lwt lwt.preemptive
    netclient netgss-system
    re.pcre
    subsocia subsocia.data))))

(executable
 ((name main)
  (modules (Main))
  (flags (-thread -ppx ppx_lwt))
  (libraries (cmdliner caqti-dynload subsocia_sync_ldap))))

(install
 ((section bin)
  (files ((main.exe as subsocia-sync-ldap)))))
