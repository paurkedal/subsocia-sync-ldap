(jbuild_version 1)

(executable
 ((name sync)
  (modules (Config Netldapx Sync Template))
  (flags (-thread -ppx ppx_lwt))
  (preprocess (pps (ppx_compose ppx_regexp)))
  (libraries
   (angstrom
    cmdliner
    inifiles
    ldap
    lwt lwt.preemptive
    netclient netgss-system
    re.pcre
    subsocia subsocia.data))))

(install
 ((section bin)
  (files ((sync.exe as subsocia-sync-ldap)))))
